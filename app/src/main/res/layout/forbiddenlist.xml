<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@android:id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tablayout">
        </TabWidget>

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <!--병용 금기 부분-->
            <LinearLayout
                android:id="@+id/TABCOMB"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:text="약 목록 조회"
                    android:textSize="15dp"
                    android:textColor="#036635"/>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:fillViewport="true">
                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/green_box"
                        android:id="@+id/MedicineList1"/>
                </ScrollView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:text="병용하지 말 것"
                    android:textSize="15dp"
                    android:textColor="#036635"/>
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:fillViewport="true"
                    android:paddingBottom="10dp">
                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/green_box"
                        android:id="@+id/CombinationForbidden"/>
                </ScrollView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    >

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="0dp"
                        android:background="@drawable/green_box"
                        android:text="약 목록 전체 삭제"
                        android:textColor="#036635"
                        android:textSize="20dp" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:drawableStart="@drawable/drawablesize"
                    android:text="3분카레 약국"
                    android:textColor="#036635"
                    android:textSize="25sp"
                    android:drawablePadding="5dp"
                    android:layout_margin="29dp"/>

            </LinearLayout>

            <!--임부 금기 부분-->
            <LinearLayout
                android:id="@+id/TABPREG"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:text="약 목록 조회"
                    android:textSize="15dp"
                    android:textColor="#036635"/>
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:fillViewport="true">

                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/green_box"
                        android:id="@+id/MedicineList2"/>
                </ScrollView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:text="임산부는 복용하지 말 것"
                    android:textSize="15dp"
                    android:textColor="#036635"/>
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:fillViewport="true"
                    android:paddingBottom="10dp">

                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/green_box"
                        android:id="@+id/PregnantForbidden"/>
                </ScrollView>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    >
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="0dp"
                        android:background="@drawable/green_box"
                        android:text="약 목록 전체 삭제"
                        android:textColor="#036635"
                        android:textSize="20dp" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:drawableStart="@drawable/drawablesize"
                    android:text="3분카레 약국"
                    android:textColor="#036635"
                    android:textSize="25sp"
                    android:drawablePadding="5dp"
                    android:layout_margin="29dp"/>

            </LinearLayout>

            <!--연령 금기 부분-->
            <LinearLayout
                android:id="@+id/TABAGE"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:text="약 목록 조회"
                    android:textSize="15dp"
                    android:textColor="#036635"/>
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:fillViewport="true">

                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/green_box"
                        android:id="@+id/MedicineList3"/>
                </ScrollView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:text="사용자 연령에 복용시 위험"
                    android:textSize="15dp"
                    android:textColor="#036635"/>
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:fillViewport="true"
                    android:paddingBottom="10dp">

                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/green_box"
                        android:id="@+id/AgeForbidden"/>
                </ScrollView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    >
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="0dp"
                        android:background="@drawable/green_box"
                        android:text="약 목록 전체 삭제"
                        android:textColor="#036635"
                        android:textSize="20dp" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:drawableStart="@drawable/drawablesize"
                    android:text="3분카레 약국"
                    android:textColor="#036635"
                    android:textSize="25sp"
                    android:drawablePadding="5dp"
                    android:layout_margin="29dp"/>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</TabHost>